<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/title">

        <TextView
            android:id="@+id/start_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/setting_title_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:paddingRight="18dp"
            android:src="@drawable/selector_btn_back" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title">

            <RelativeLayout
                android:id="@+id/setting_rl_download"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/selector_item_set_bg"
                android:clickable="true">

                <TextView
                    android:id="@+id/setting_tv_gas_well"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="20dp"
                    android:text="@string/setting_base_data_download"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/line_gas_well"
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:layout_below="@+id/setting_rl_download"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/setting_rl_plan_download"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_rl_download"
                android:background="@drawable/selector_item_set_bg"
                android:clickable="true">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="20dp"
                    android:text="巡检计划模板下载"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:layout_below="@+id/setting_rl_plan_download"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/setting_rl_user_download"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_rl_plan_download"
                android:background="@drawable/selector_item_set_bg"
                android:clickable="true">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="20dp"
                    android:text="用户数据下载"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:layout_below="@+id/setting_rl_user_download"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/setting_rl_well_download"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_rl_user_download"
                android:background="@drawable/selector_item_set_bg"
                android:clickable="true">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="20dp"
                    android:text="单井数据下载"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:layout_below="@+id/setting_rl_well_download"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/setting_rl_update_xj_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_rl_well_download"
                android:background="@drawable/selector_item_set_bg"
                android:clickable="true">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="20dp"
                    android:text="巡检项更新"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:layout_below="@+id/setting_rl_update_xj_item"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/setting_rl_update_tank"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_rl_update_xj_item"
                android:background="@drawable/selector_item_set_bg"
                android:clickable="true">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="20dp"
                    android:text="车辆信息"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:layout_below="@+id/setting_rl_update_tank"
                android:background="@color/gray" />


            <RelativeLayout
                android:id="@+id/setting_rl_gas_well"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_rl_update_tank"
                android:background="@drawable/selector_item_set_bg"
                android:clickable="true">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="20dp"
                    android:text="IP设置"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/line_download"
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:layout_below="@+id/setting_rl_gas_well"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/setting_rl_set_device_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_download"
                android:background="@drawable/selector_item_set_bg"
                android:clickable="true">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="20dp"
                    android:text="设备号设置"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/line_download2"
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:layout_below="@+id/setting_rl_set_device_id"
                android:background="@color/gray" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>