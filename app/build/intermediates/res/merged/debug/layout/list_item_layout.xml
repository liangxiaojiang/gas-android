<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">
 <ImageView 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignParentLeft="true" 
    android:layout_marginTop="18sp"
    android:src="@drawable/history"
    android:contentDescription="dd"
    android:layout_marginLeft="5dip"/>  
 <TextView 
    android:id="@+id/time"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:textSize="12sp"
    android:text="路线名称："
    android:textColor="#b5b5b6"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="35dip"/>
    <TextView android:id="@+id/hd_name"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:singleLine="true"
    android:ellipsize ="marquee"
    android:marqueeRepeatLimit="marquee_forever"
    android:focusableInTouchMode="true"
    android:scrollHorizontally="true"
    android:textSize="12sp"
    android:textColor="#000000"
    android:layout_toRightOf="@id/time"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="100dip"/>

<TextView android:id="@+id/l_name" 
    android:layout_width="wrap_content"
    android:layout_height="20dip" 
    android:text="行驶时间："
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="35dip"
    android:textColor="#b5b5b6"
    android:layout_marginTop="18sp"
    android:textSize="12sp" />
<TextView android:id="@+id/hd_time"
    android:layout_width="wrap_content"
    android:layout_height="20dip" 
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="100dip"
    android:textColor="#000000"
    android:layout_marginTop="18sp"
    android:textSize="12sp" />

<TextView android:id="@+id/l_name2"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:text="创建时间："
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dip"
        android:textColor="#b5b5b6"
        android:layout_marginTop="36sp"
        android:textSize="12sp" />
<TextView android:id="@+id/hd_date"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dip"
        android:textColor="#000000"
        android:layout_marginTop="36sp"
        android:textSize="12sp" />

<ImageView 
    android:layout_height="38dip"
    android:layout_width="wrap_content"
    android:layout_alignParentRight="true"
    android:src="@drawable/home_vertical_line"
    android:layout_marginTop="20sp"
    android:contentDescription="dd"
    android:layout_marginRight="100dip"/>
 <LinearLayout
     android:layout_width="100dp"
     android:layout_height="match_parent"
     android:gravity="center_horizontal"
     android:layout_alignParentRight="true"
     android:layout_marginTop="25sp"
     android:layout_marginRight="2dip"
     android:orientation="vertical" >

     <TextView android:id="@+id/hd_dist"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:textColor="#4876FF"
           android:textSize="12sp" />
 </LinearLayout>
</RelativeLayout>