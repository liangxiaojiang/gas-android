<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="预览"
            android:textColor="@color/blue1"
            android:textSize="20sp"/>

    <View
            android:id="@+id/v_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:layout_below="@+id/tv_title"
            android:background="@color/blue1"/>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_line">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp">

                <TextView
                        android:id="@+id/tv_checked_point_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="受检点："
                        android:textColor="@color/blue1"
                        android:textSize="15sp"/>

                <TextView
                        android:id="@+id/tv_checked_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_checked_point_tips"
                        android:paddingBottom="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/blue1"
                        android:textSize="15sp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                <TextView
                        android:id="@+id/tv_issues_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主要问题："
                        android:textColor="@color/blue1"
                        android:textSize="15sp"/>

                <TextView
                        android:id="@+id/tv_issues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_issues_tips"
                        android:paddingBottom="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/blue1"
                        android:textSize="15sp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                <TextView
                        android:id="@+id/tv_suggestion_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="建议与意见："
                        android:textColor="@color/blue1"
                        android:textSize="15sp"/>

                <TextView
                        android:id="@+id/tv_suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_suggestion_tips"
                        android:paddingBottom="8dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/blue1"
                        android:textSize="15sp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                <TextView
                        android:id="@+id/tv_time_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="填写时间："
                        android:textColor="@color/blue1"
                        android:textSize="15sp"/>

                <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_time_tips"
                        android:paddingBottom="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/blue1"
                        android:textSize="15sp"/>
            </RelativeLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="74dp"
                    android:layout_below="@+id/item_exception_history_rl4"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:paddingBottom="24dp">

                <TextView
                        android:visibility="gone"
                        android:id="@+id/dialog_history_preview_photo"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_blue"
                        android:gravity="center"
                        android:onClick="true"
                        android:text="查看图片"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/dialog_history_preview_confirm"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_blue"
                        android:gravity="center"
                        android:onClick="true"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>