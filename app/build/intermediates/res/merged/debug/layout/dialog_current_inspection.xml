<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tankuang"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="巡检点信息"
            android:textColor="@color/blue1"
            android:textSize="20sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/blue2" />

        <TextView
            android:id="@+id/dialog_inspection_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="巡检点编号："
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_inspection_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="巡检点区域："
            android:visibility="gone"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dialog_inspection_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="巡检点名称："
            android:textColor="@color/blue1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_inspection_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="巡检点状态："
            android:textSize="18sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_inspection_confirm"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dialog_inspection_cancel"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="25dp" />
    </LinearLayout>

</RelativeLayout>