<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/dialog_check_type_input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="预览"
        android:textColor="@color/blue1"
        android:textSize="20sp" />

    <View
        android:id="@+id/dialog_check_type_input_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:layout_below="@+id/dialog_check_type_input_title"
        android:background="@color/blue1" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_check_type_input_line" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/item_exception_history_rl1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/item_exception_history_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作业点："
                    android:textColor="@color/blue1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/dialog_history_preview_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_exception_history_tv2"
                    android:paddingBottom="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/blue1"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_exception_history_rl2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_exception_history_rl1"
                android:layout_marginLeft="20dp" >

                <TextView
                    android:id="@+id/item_exception_history_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题类型："
                    android:textColor="@color/blue1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/dialog_history_preview_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_exception_history_tv1"
                    android:paddingBottom="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/blue1"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_exception_history_rl3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_exception_history_rl2"
                android:layout_marginLeft="20dp" >

                <TextView
                    android:id="@+id/item_exception_history_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题描述："
                    android:textColor="@color/blue1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/dialog_history_preview_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_exception_history_tv3"
                    android:paddingBottom="8dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/blue1"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_exception_history_rl4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_exception_history_rl3"
                android:layout_marginLeft="20dp" >

                <TextView
                    android:id="@+id/item_exception_history_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="填写时间："
                    android:textColor="@color/blue1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/dialog_history_preview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_exception_history_tv4"
                    android:paddingBottom="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/blue1"
                    android:textSize="15sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="74dp"
                android:layout_below="@+id/item_exception_history_rl4"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingBottom="24dp" >

                <TextView
                    android:id="@+id/dialog_history_preview_photo"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_blue"
                    android:gravity="center"
                    android:onClick="true"
                    android:text="查看图片"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dialog_history_preview_confirm"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_blue"
                    android:gravity="center"
                    android:onClick="true"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>