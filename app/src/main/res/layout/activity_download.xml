<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DownloadActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/title" >

        <ImageView
            android:id="@+id/download_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:paddingRight="18dp"
            android:src="@drawable/selector_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="基础数据下载"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/download_confirm"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingLeft="18dp"
            android:paddingRight="10dp"
            android:src="@drawable/selector_btn_finish" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/download_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:clickable="false"
        android:text="@string/clear_database" />

    <CheckBox
        android:id="@+id/download_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:text="@string/user_data_download_finish" />

    <CheckBox
        android:id="@+id/download_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:text="@string/device_data_download_finish" />

    <CheckBox
        android:id="@+id/download_well"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:text="@string/well_data_download_finish" />

    <CheckBox
        android:id="@+id/download_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:text="@string/line_data_download_finish" />

    <CheckBox
        android:id="@+id/download_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:text="@string/plan_data_download_finish"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/download_tank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:text="车辆信息下载完成"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/download_dict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:text="@string/dict_data_download_finish" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/download_check_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/download_reset"
            android:visibility="gone"
            android:clickable="false"
            android:text="@string/check_item_data_download_finish" />

        <TextView
            android:id="@+id/download_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_btn_blue"
            android:padding="10dp"
            android:text="重试"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/download_start"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/selector_btn_blue"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="下载"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>