<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/i_bar"
        layout="@layout/top_bar"/>


    <LinearLayout
        android:id="@+id/ll_pingjia"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
                <Button
                    android:id="@+id/xing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableRight="@drawable/xingxing" />

                <TextView
                    android:id="@+id/fen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="4.88" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="当前评分"
                android:gravity="center_horizontal"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_zuoye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="26dp"
                    android:contentDescription="@null"
                    android:text="56"
                    android:textColor="@color/white"
                   />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_zuoye"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="作业次数"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>


            <RelativeLayout

                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_pingf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="26dp"
                    android:contentDescription="@null"
                    android:text="56"
                    android:textColor="@color/white"
                   />

                <TextView
                    android:id="@+id/tv_yipingfen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_pingf"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="已评分作业"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>


            <RelativeLayout

                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_5zuoye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="26dp"
                    android:contentDescription="@null"
                    android:text="56"
                    android:textColor="@color/white"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_5zuoye"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="5星作业"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>