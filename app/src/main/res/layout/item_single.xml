        <TextView
            android:id="@+id/single_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/single_taskname"
            android:layout_marginLeft="190dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:paddingTop="5dp"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/item_single_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/single_state"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:textColor="@color/qianhui"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_single_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_single_time"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="40dp"
            android:gravity="left"
            android:paddingBottom="16dp"
            android:textColor="@color/qianhui"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/single_more"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/btn_arrow" />
    </RelativeLayout>
</RelativeLayout>