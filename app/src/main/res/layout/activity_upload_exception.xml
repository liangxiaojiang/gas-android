<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/title" >

        <ImageView
            android:id="@+id/upload_exception_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:paddingRight="18dp"
            android:src="@drawable/selector_btn_back" />

        <TextView
            android:id="@+id/upload_exception_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="上报问题"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/upload_exception_history"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_btn_blue"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="历史"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/rl1"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/light_gray"
            >

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl2"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:paddingBottom="8dp"
                android:paddingTop="4dp"
                >

                <TextView
                    android:id="@+id/tv_upload_exception_point"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/upload_exception_point"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@color/red" />

                <Spinner
                    android:id="@+id/upload_exception_spinner4"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/tv_upload_exception_point"
                    android:background="@drawable/arrow" />

                <Spinner
                    android:id="@+id/upload_exception_spinner5"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_alignTop="@+id/upload_exception_spinner4"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_toRightOf="@+id/upload_exception_spinner4"
                    android:background="@drawable/arrow"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/upload_exception_spinner6"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/upload_exception_spinner5"

                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/upload_exception_spinner4"

                    android:background="@drawable/arrow"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/upload_exception_point"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="作业点"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_read_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="110dp"
                    android:background="@drawable/cardreading"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tv_read_info_upload"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="110dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_read_upload"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:paddingBottom="8dp"
                android:paddingTop="4dp" >

                <TextView
                    android:id="@+id/upload_exception_exception_type"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="上报问题"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_upload_exception_type"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/upload_exception_exception_type"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@color/red" />

                <Spinner
                    android:id="@+id/upload_exception_spinner1"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/tv_upload_exception_type"
                    android:background="@drawable/arrow" />

                <Spinner
                    android:id="@+id/upload_exception_spinner2"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_alignTop="@+id/upload_exception_spinner1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_toRightOf="@+id/upload_exception_spinner1"
                    android:background="@drawable/arrow"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/upload_exception_spinner3"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="4dp"
                    android:layout_toRightOf="@+id/upload_exception_spinner1"
                    android:layout_below="@+id/upload_exception_spinner2"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/arrow"
                    android:visibility="gone" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rl3"
                android:layout_alignStart="@+id/rl3"
                android:layout_below="@+id/rl3"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="4dp"
                android:paddingBottom="8dp"
                android:paddingTop="4dp"  >

                <TextView
                    android:id="@+id/upload_exception_description"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="问题描述"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_upload_exception_description"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/upload_exception_description"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/upload_exception_et_description"
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/tv_upload_exception_description"
                    android:background="@null"
                    android:gravity="left|top"
                    android:hint="请输入问题描述"
                    android:minHeight="120dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="4dp"
                    android:textSize="14sp" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/upload_exception_photo_rl"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_blue" >

            <TextView
                android:id="@+id/upload_exception_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:focusable="false"
                android:gravity="center"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:text="添图"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/upload_exception_photo_num"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignTop="@+id/upload_exception_photo"
                android:layout_toRightOf="@+id/upload_exception_photo"
                android:background="@drawable/iconfont_notice"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="0.5px"
            android:layout_height="fill_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/upload_exception_priview"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_blue"
            android:clickable="true"
            android:gravity="center"
            android:text="预览"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <View
            android:layout_width="0.5px"
            android:layout_height="fill_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/upload_exception_confirm"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_blue"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>