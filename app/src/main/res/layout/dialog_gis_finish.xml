<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tankuang"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16sp"
                android:text="巡护作业结果"
                android:textColor="@color/blue1"
                android:textSize="18sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:background="@color/blue1" />

            <TextView
                android:id="@+id/dialog_gis_finish_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="开始时间："
                android:textColor="@color/blue1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dialog_gis_finish_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="结束时间："
                android:textColor="@color/blue1"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" >

                <TextView
                    android:id="@+id/dialog_gas_exception_handle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:text="巡护名称"
                    android:textColor="@color/blue1"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/dialog_gis_finish_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/dialog_gas_exception_handle_name"
                    android:background="@drawable/bg_edittext"
                    android:hint="请输入巡护作业名称"
                    android:minHeight="40dp"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="25dp"
                android:paddingBottom="20dp" >

                <Button
                    android:id="@+id/dialog_gis_finish_confirm"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_blue"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/dialog_gas_exception_handle_cancel"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_blue"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>